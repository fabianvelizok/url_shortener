<%= form_with model:, class: "flex flex-col", id: "link_form" do |f| %>
  <%= render "shared/form_errors", model: f.object %>

  <div class="mb-3 flex gap-2">
    <%= f.text_field :url, placeholder: "https://example.org", autofocus: true, 
                      class: "w-full border border-stone-300 dark:border-slate-600 bg-stone-50 dark:bg-slate-800 text-slate-900 dark:text-stone-100 p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
    <%= f.submit "Save", class: "text-sm bg-sky-600 hover:bg-sky-700 text-white rounded-lg px-4 py-2 transition-colors" %>
  </div>
<% end %>