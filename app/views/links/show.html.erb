<div class="mx-auto max-w-[30rem] flex flex-col flex-grow">
  <div class="flex items-center justify-between mb-3">
    <h1 class="text-xl font-semibold text-slate-900 dark:text-stone-100">Link Details</h1>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_link_path(@link), class: "text-sm bg-sky-600 hover:bg-sky-700 text-white rounded-lg px-3 py-1 transition-colors" %>
      <%= button_to "Delete", link_path(@link), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-sm bg-slate-700 hover:bg-slate-800 text-white rounded-lg px-3 py-1 transition-colors" %>
    </div>
  </div>

  <div class="mb-3">
    <%= render "links/metadata", link: @link %>
  </div>

  <%= link_to @link.url, @link.url, target: :_blank, data: { turbo: false }, class: "text-lg mb-3 text-sky-600 dark:text-sky-400 hover:underline block" %>
  
  <div class="mb-3 text-slate-600 dark:text-slate-400">
    <%= pluralize(@link.views_count, "view") %>
  </div>

  <div class="mb-3 flex justify-between">
    <div class="flex gap-2 items-center">
      <span class="text-slate-600 dark:text-slate-400">Short URL:</span>
      <%= link_to view_path(@link), target: :_blank, data: { turbo: false }, class: "text-sky-600 dark:text-sky-400 flex items-center gap-2" do %>
        <%= image_tag favicon_url(@link.domain) %>
        <span><%= view_url(@link) %></span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
      <% end %>
    </div>
     <%= button_tag type: :button,
        class: "bg-slate-500 hover:bg-slate-600 text-sm text-white px-3 rounded-lg transition-colors flex items-center justify-center", data: {
        controller: "clipboard",
        action: "click->clipboard#copy",
        clipboard_content_value: view_url(@link)
      } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
      </svg>
      <span class="sr-only">Copy</span>
    <% end %>
  </div>

  <div class="mb-6">
    <%= line_chart @link.views.group_by_day(:created_at, range: 2.weeks.ago..Time.now).count %>
    <p class="text-sm text-slate-400 dark:text-slate-500 mb-4 mt-4">This chart shows the number of views for the link over the past two weeks.</p>
  </div>

  <div class="flex items-center gap-2">
    <%= link_to "Back", links_path, class: "text-sm bg-slate-500 hover:bg-slate-600 text-white rounded-lg px-3 py-1 transition-colors" %>
  </div>
</div>
