
<section class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
  <h2 class="text-2xl font-bold mb-6 text-center">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="flex flex-col">
      <%= f.label :password, "New password", class: "mb-1 font-medium text-sm text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500 mb-1">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, "Confirm new password", class: "mb-1 font-medium text-sm text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Change my password", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</section>
