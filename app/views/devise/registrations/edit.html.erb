<section class="max-w-xl mx-auto mt-10 p-6 bg-white dark:bg-slate-800 rounded-lg shadow-lg border border-stone-200 dark:border-slate-700">
  <h2 class="text-2xl font-bold mb-6 text-center text-slate-900 dark:text-stone-100">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email, class: "mb-1 font-medium text-sm text-slate-700 dark:text-stone-300" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-stone-300 dark:border-slate-600 rounded-lg px-3 py-2 bg-white dark:bg-slate-900 text-slate-900 dark:text-stone-100 focus:outline-none focus:ring-2 focus:ring-sky-500 dark:focus:ring-sky-400" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-slate-600 dark:text-slate-400 italic">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= f.label :password, class: "mb-1 font-medium text-sm text-slate-700 dark:text-stone-300" %>
      <em class="text-xs text-slate-500 dark:text-slate-400 mb-1">(leave blank if you don't want to change it)</em>
      <%= f.password_field :password, autocomplete: "new-password", class: "border border-stone-300 dark:border-slate-600 rounded-lg px-3 py-2 bg-white dark:bg-slate-900 text-slate-900 dark:text-stone-100 focus:outline-none focus:ring-2 focus:ring-sky-500 dark:focus:ring-sky-400" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-slate-500 dark:text-slate-400 mt-1">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class: "mb-1 font-medium text-sm text-slate-700 dark:text-stone-300" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-stone-300 dark:border-slate-600 rounded-lg px-3 py-2 bg-white dark:bg-slate-900 text-slate-900 dark:text-stone-100 focus:outline-none focus:ring-2 focus:ring-sky-500 dark:focus:ring-sky-400" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :current_password, class: "mb-1 font-medium text-sm text-slate-700 dark:text-stone-300" %>
      <em class="text-xs text-slate-500 dark:text-slate-400 mb-1">(we need your current password to confirm your changes)</em>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "border border-stone-300 dark:border-slate-600 rounded-lg px-3 py-2 bg-white dark:bg-slate-900 text-slate-900 dark:text-stone-100 focus:outline-none focus:ring-2 focus:ring-sky-500 dark:focus:ring-sky-400" %>
    </div>

    <div class="text-center">
      <%= f.submit "Update", class: "bg-sky-600 hover:bg-sky-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>

  <div class="mt-10 border-t border-stone-200 dark:border-slate-700 pt-6 text-center space-y-4">
    <h3 class="text-lg font-semibold text-red-600 dark:text-red-400">Cancel my account</h3>
    <div>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors" %>
    </div>
    <%= link_to "Back", :back, class: "text-sky-600 dark:text-sky-400 hover:underline text-sm" %>
  </div>
</section>
