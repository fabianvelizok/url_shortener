<section class="max-w-md mx-auto mt-10 p-6 bg-stone-100 dark:bg-slate-800 border border-stone-200 dark:border-slate-700 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-6 text-center text-slate-900 dark:text-stone-100">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div class="flex flex-col">
      <%= f.label :email, class: "mb-1 font-medium text-sm text-slate-700 dark:text-slate-300" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                         class: "border border-stone-300 dark:border-slate-600 bg-stone-50 dark:bg-slate-900 text-slate-900 dark:text-stone-100 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "mb-1 font-medium text-sm text-slate-700 dark:text-slate-300" %>
      <%= f.password_field :password, autocomplete: "current-password", 
                           class: "border border-stone-300 dark:border-slate-600 bg-stone-50 dark:bg-slate-900 text-slate-900 dark:text-stone-100 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "rounded text-sky-600 focus:ring-sky-500 border-stone-300 dark:border-slate-600" %>
        <%= f.label :remember_me, class: "text-sm text-slate-700 dark:text-slate-300" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Sign in", class: "w-full bg-sky-600 hover:bg-sky-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</section>
