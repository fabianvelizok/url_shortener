<% if model.present? && model.errors.any? %>
  <div id="error_explanation" class="bg-stone-100 dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-lg p-4 mb-4">
    <h2 class="text-lg font-medium text-slate-700 dark:text-slate-300 mb-2">
      <%= pluralize(model.errors.count, "error") %> prohibited this <%= model.class.name.humanize %> from being saved:
    </h2>

    <ul class="space-y-1 text-sm">
      <% model.errors.each do |error| %>
        <li class="text-slate-600 dark:text-slate-400 flex items-center gap-2">
          <svg class="w-4 h-4 text-slate-500 dark:text-slate-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <%= error.full_message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>