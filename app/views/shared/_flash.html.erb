<div class="text-center">
  <% if notice %>
    <p class="notice bg-sky-50 dark:bg-sky-900/20 border border-sky-200 dark:border-sky-800 text-sky-800 dark:text-sky-200 shadow-md p-3 rounded-lg mb-4"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-800 dark:text-red-200 shadow-md p-3 rounded-lg mb-4"><%= alert %></p>
  <% end %>
</div>
